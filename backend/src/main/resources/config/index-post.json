{
  "analysis": {
    "filter": {
      "ru_stop": {
        "type": "stop",
        "stopwords": "_russian_"
      },
      "ru_stemmer": {
        "type": "stemmer",
        "language": "russian"
      },
      "en_stop": {
        "type": "stop",
        "stopwords": "_english_"
      },
      "en_stemmer": {
        "type": "stemmer",
        "language": "english"
      }

    },
    "analyzer": {
      "my_analyzer": {
        "tokenizer": "standard",
        "filter": [
          "lowercase",
          "ru_stop",
          "ru_stemmer",
          "en_stop",
          "en_stemmer"
        ]
      }
    }
  }
}